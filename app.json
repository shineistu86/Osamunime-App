# For use with Heroku deployment

[buildpacks]
  # Use the official Heroku PHP buildpack
  heroku/php

[env]
  # Set the application environment
  APP_ENV = "production"
  # Enable debug mode (set to false in production)
  APP_DEBUG = "false"
  # Set the application URL
  APP_URL = "https://your-app-name.herokuapp.com"
  # Database configuration
  DB_CONNECTION = "mysql"
  # Cache driver
  CACHE_DRIVER = "redis"
  # Session driver
  SESSION_DRIVER = "redis"
  # Queue driver
  QUEUE_DRIVER = "database"

[addons]
  # Add-ons to provision
  heroku-postgresql
  heroku-redis